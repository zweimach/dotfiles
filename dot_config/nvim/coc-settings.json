{
  "coc.preferences.enableMessageDialog": true,
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "codeLens.enable": true,
  "diagnostic.floatConfig": {
    "maxHeight": 80,
    "maxWidth": 120
  },
  "eslint.autoFixOnSave": true,
  "floatFactory.floatConfig": {
    "border": true,
    "borderhighlight": "FloatBorder",
    "highlight": "NormalFloat",
    "rounded": true
  },
  "hover.floatConfig": {
    "maxHeight": 80,
    "maxWidth": 120
  },
  "go.goplsOptions": {
    "gofumpt": true,
    "linksInHover": false,
    "staticcheck": true,
    "semanticTokens": true
  },
  "languageserver": {
    "astro": {
      "command": "astro-ls",
      "args": ["--stdio"],
      "filetypes": ["astro"],
      "rootPatterns": ["astro.config.mjs", "astro.config.js"]
    },
    "dhall": {
      "command": "dhall-lsp-server",
      "filetypes": ["dhall"]
    },
    "elixir": {
      "command": "elixir-ls",
      "filetypes": ["elixir", "eelixir", "heex", "surface"],
      "rootPatterns": ["mix.exs"]
    },
    "elm": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"]
    },
    "erlang": {
      "command": "erlang_ls",
      "filetypes": ["erlang"],
      "rootPatterns": ["rebar.config", "erlang.mk"]
    },
    "gleam": {
      "command": "gleam",
      "args": ["lsp"],
      "filetypes": ["gleam"],
      "rootPatterns": ["gleam.toml"]
    },
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": [
        "graphql",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
      ],
      "requireRootPattern": true,
      "rootPatterns": [".graphqlrc", ".graphqlrc.*", "graphql.config.*"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "filetypes": ["haskell", "lhaskell", "cabal"],
      "rootPatterns": [
        "*.cabal",
        "cabal.project",
        "stack.yaml",
        "package.yaml",
        "hie.yaml"
      ],
      "settings": {
        "haskell": {
          "cabalFormattingProvider": "cabal-fmt",
          "formattingProvider": "fourmolu"
        }
      }
    },
    "ocaml": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["psc-package.json", "spago.dhall"]
    },
    "racket": {
      "command": "racket",
      "args": ["-l", "racket-langserver"],
      "filetypes": ["scheme", "racket"]
    },
    "rescript": {
      "module": "~/.local/share/nvim/lazy/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "standardml": {
      "command": "millet",
      "filetypes": ["sml"],
      "rootPatterns": ["millet.toml"]
    },
    "svelte": {
      "command": "svelteserver",
      "args": ["--stdio"],
      "filetypes": ["svelte"]
    },
    "vala": {
      "command": "vala-language-server",
      "filetypes": ["vala"]
    }
  },
  "phpstan.download.checkOnStartup": false,
  "prettier.disableLanguages": [],
  "python.formatting.provider": "black",
  "suggest.completionItemKindLabels": {
    "method": "  ",
    "function": "  ",
    "variable": "[]",
    "field": "  ",
    "typeParameter": "<>",
    "constant": "  ",
    "class": " פּ ",
    "interface": " 蘒",
    "struct": "  ",
    "event": "  ",
    "operator": "  ",
    "module": "  ",
    "property": "  ",
    "enum": " 練",
    "reference": "  ",
    "keyword": "  ",
    "file": "  ",
    "folder": " ﱮ ",
    "color": "  ",
    "unit": " 塞 ",
    "snippet": "  ",
    "text": "  ",
    "constructor": "  ",
    "value": "  ",
    "enumMember": "  "
  },
  "suggest.floatConfig": {
    "border": true,
    "borderhighlight": "FloatBorder",
    "highlight": "NormalFloat",
    "rounded": true
  },
  "tailwindCSS.experimental.classRegex": [
    "\\bclass[\\s(<|]+\"([^\"]*)\"",
    "\\bclass[\\s(]+\"[^\"]*\"[\\s+]+\"([^\"]*)\"",
    "\\bclass[\\s<|]+\"[^\"]*\"\\s*\\+{2}\\s*\"([^\"]*)\"",
    "\\bclass[\\s<|]+\"[^\"]*\"\\s*\\+{2}\\s*\"[^\"]*\"\\s*\\+{2}\\s*\"([^\"]*)\"",
    "\\bclass[\\s<|]+\"[^\"]*\"\\s*\\+{2}\\s*\"[^\"]*\"\\s*\\+{2}\\s*\"[^\"]*\"\\s*\\+{2}\\s*\"([^\"]*)\"",
    "\\bclassList[\\s\\[\\(]+\"([^\"]*)\"",
    "\\bclassList[\\s\\[\\(]+\"[^\"]*\",\\s[^\\)]+\\)[\\s\\[\\(,]+\"([^\"]*)\"",
    "\\bclassList[\\s\\[\\(]+\"[^\"]*\",\\s[^\\)]+\\)[\\s\\[\\(,]+\"[^\"]*\",\\s[^\\)]+\\)[\\s\\[\\(,]+\"([^\"]*)\""
  ],
  "tailwindCSS.includeLanguages": {
    "elm": "html"
  },
  "tsserver.useLocalTsdk": true,
  "semanticTokens.filetypes": ["*"],
  "suggest.noselect": true,
  "volar.disableFormatting": true,
  "volar.useWorkspaceTsdk": true,
  "xml.format.enabled": false,
  "xml.server.workDir": "~/.cache/lemminx",
  "zig.path": "zls"
}

